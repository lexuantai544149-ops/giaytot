<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.Appit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Kế thừa từ theme chính và ghi đè màu sắc cho chế độ tối -->

        <!-- Màu chính của theme -->
        <item name="colorPrimary">@color/dark_surface</item>
        <item name="colorPrimaryVariant">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/dark_text_primary</item>

        <!-- Màu phụ (cho nút bấm, v.v.) -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Màu nền của toàn ứng dụng -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>

        <!-- Màu chữ trên các nền -->
        <item name="colorOnBackground">@color/dark_text_primary</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_surface</item>

        <!-- Áp dụng màu chữ cho EditText và TextView -->
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorHint">@color/dark_text_secondary</item>
    </style>
</resources>